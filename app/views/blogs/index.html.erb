<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>リンク先</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>    
      <td><%= blog.content %></td>
      <td><%= link_to "詳細",blog_path(blog.id) %></td>
      <td><%= link_to "編集",edit_blog_path(blog.id) %></td>
      <td><%= link_to "削除", blog_path(blog.id),method: :delete, data: {confirm: '本当に削除していいですか。'}%></td>
    </tr>
  <% end %>
</table>

<%= link_to "新規作成",new_blog_path %>

<style>
  table,tr,th,td{
    border:1px solid gray;
    border-collapse:collapse;
  }
  
  table th {
    background-color: #ffcc00;
  }
  
  
</style>